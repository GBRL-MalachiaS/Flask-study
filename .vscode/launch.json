    "version": "0.2.0",
    "configurations": [
        {
        "name": "Flask Debug",
        "type": "python",
        "request": "launch",
        "module": "flask",
        "env": {
            "FLASK_APP": "form_login_app/run.py",        // ou o nome do seu arquivo principal
            "FLASK_ENV": "development"
        },
        "args": [
            "run",
            "--no-debugger",
            "--no-reload"
        ],
        "jinja": true,
        "console":"integratedTerminal"
        }
    ]

}